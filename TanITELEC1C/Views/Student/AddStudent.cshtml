@model Student;

<body>
<div class="main-container">

    <h2 id="HDR" style="font-size: 40px; color #d17724; font-weight: lighter; text-align: center;">Student Registration</h2>
    <div class="container">
            <div style="text-align:center">

                Add a new student

            </div>
            <form asp-action="AddStudent" asp-controller="Student" method="post" enctype="multipart/form-data">

                <div class="form-group">

                    <label asp-for="UploadPhoto"></label>
                    <input class="form-control" asp-for="UploadPhoto"/>

                </div>

                <div class="form-group">

                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" id="FirstName" placeholder="Enter Student First Name" />

                </div>

                <div class="form-group">

                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" id="LastName" placeholder="Enter Student Last Name" />

                </div>

                <div class="form-group">

                    <label asp-for="Course"></label>
                    <select asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))" class="form-control" id="Course" placeholder="Enter your course"> </select>
                    


                </div>

                <div class="form-group">

                    <label asp-for="dateEnrolled"></label>
                    <input asp-for="dateEnrolled" class="form-control" id="dateEnrolled"/>

                </div>

                <div class="form-group">

                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" id="Email" placeholder="Enter your Email" />

                </div>

                <div style="text-align: center;">

                    <button type="submit" class="btn btn-primary">

                        Submit

                    </button>

                </div>



            </form>

    </div>

</div>
</body>