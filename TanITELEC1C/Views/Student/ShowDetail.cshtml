@model Student;

<h1>Student Details</h1>

<img src="/@Model.imagePath" class="img-thumbnail" />

@*if(ViewBag.StudentProfilePhoto != null)
{
    <img src="@ViewBag.StudentProfilePhoto" alt="Student Profile Photo for @Model.LastName" width="200" height="200" class="img-thumbnail"/>
}*@

<table class="table table-dark">
    <tr>
        <th>Student Id: </th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>First Name: </th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Course: </th>
        <td>@Model.Course</td>
    </tr>

    <tr>
        <th>Date Enrolled: </th>
        <td>@Model.dateEnrolled</td>
    </tr>

    <tr>
        <th>Email: </th>
        <td>@Model.Email</td>
    </tr>


</table>