@page
@model TanITELEC1C.ViewModels.RegisterViewModel;

@{
}


<body>
    <div class="main-container">

        <h2 id="HDR" style="font-size: 40px; color #d17724; font-weight: lighter; text-align: center;">Student Registration</h2>
        <div class="container">
            <div style="text-align:center">

                Login

            </div>
            <form asp-action="Register" asp-controller="Account" method="post">

                <div class="form-group">

                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" id="UserName" placeholder="Enter Student First Name" />

                </div>

                <div class="form-group">

                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" id="Password" placeholder="Enter Student Last Name" />

                </div>

                <div class="form-group">

                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" placeholder="Enter Student Last Name" />

                </div>

                <div class="form-group">

                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" id="FirstName" placeholder="Enter Student Last Name" />

                </div>

                <div class="form-group">

                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" id="LastName" placeholder="Enter Student Last Name" />

                </div>

                <div class="form-group">

                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" id="Email" placeholder="Enter Student Last Name" />

                </div>

                <div class="form-group">

                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" id="Phone" placeholder="Enter Student Last Name" />

                </div>


                <div style="text-align: center;">

                    <button type="submit" class="btn btn-primary">

                        Submit

                    </button>

                </div>



            </form>

        </div>

    </div>
</body>


