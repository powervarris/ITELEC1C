@model Instructor;

<body>
    <div class="main-container">

        <h2 id="HDR" style="font-size: 40px; color #d17724; font-weight: lighter; text-align: center;">Instructor Registration</h2>
        <div class="container">
            <div style="text-align:center">

                Add a new Instructor

            </div>
            <form asp-action="AddInstructor" asp-controller="Instructor" method="post" enctype="multipart/form-data">

                <div class="form-group">

                    <label asp-for="UploadPhoto"></label>
                    <input class="form-control" asp-for="UploadPhoto" />

                </div>

                <div class="form-group">

                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" id="FirstName" placeholder="Enter Instructor First Name" />

                </div>

                <div class="form-group">

                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" id="LastName" placeholder="Enter Instructor Last Name" />

                </div>

                <div class="form-group">

                    <label asp-for="Rank"></label>
                    <select asp-for="Rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))" class="form-control" id="Course" placeholder="Enter your course"> </select>



                </div>

                <div class="form-group">

                    <label asp-for="Status">Status</label>
                    <select asp-for="Rank" asp-items="@Html.GetEnumSelectList(typeof(Status))" class="form-control" id="Course" placeholder="Enter your course"> </select>

                </div>


                <div class="form-group">

                    <label asp-for="HiringDate"></label>
                    <input asp-for="HiringDate" class="form-control" id="Email" placeholder="Enter your Email" />

                </div>

                <div class="form-group">

                    <label asp-for="email"></label>
                    <input asp-for="email" class="form-control" id="Email" placeholder="Enter your Email" />

                </div>

                <div class="form-group">

                    <label asp-for="phone"></label>
                    <input asp-for="phone" class="form-control" id="phone" placeholder="Enter your phone" />

                </div>

                <br />

                <div style="text-align: center;">

                    <button type="submit" class="btn btn-primary">

                        Submit

                    </button>

                    <button type="button" onclick="history.back();" class="btn btn-primary">

                        Cancel

                    </button>

                </div>



            </form>

        </div>

    </div>
</body>